<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_pop_goods_menu"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="131dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_more_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_more_msg"
                    android:drawablePadding="21dp"
                    android:gravity="center_vertical"
                    android:text="消息"
                    android:textColor="@color/color_3e"
                    android:textSize="16sp" />

                <!--<TextView-->
                <!--android:id="@+id/cart_num_tv"-->
                <!--android:layout_width="14dp"-->
                <!--android:layout_height="14dp"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_marginTop="7dp"-->
                <!--android:layout_marginEnd="30dp"-->
                <!--android:background="@drawable/corner_cart_num"-->
                <!--android:gravity="center"-->
                <!--android:text="99"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="10sp" />-->
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="51dp"
                android:background="@color/color_f5f5f5" />

            <TextView
                android:id="@+id/tv_more_main"
                android:layout_width="131dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:drawableStart="@drawable/ic_more_home"
                android:drawablePadding="21dp"
                android:gravity="center_vertical"
                android:text="首页"
                android:textColor="@color/color_3e"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="51dp"
                android:background="@color/color_f5f5f5" />

            <TextView
                android:id="@+id/tv_more_search"
                android:layout_width="131dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:drawableStart="@drawable/ic_more_search"
                android:drawablePadding="21dp"
                android:gravity="center_vertical"
                android:text="搜索"
                android:textColor="@color/color_3e"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="51dp"
                android:background="@color/color_f5f5f5" />

            <TextView
                android:id="@+id/tv_more_shopcart"
                android:layout_width="131dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:drawableStart="@drawable/ic_more_shopcart"
                android:drawablePadding="21dp"
                android:gravity="center_vertical"
                android:text="购物车"
                android:textColor="@color/color_3e"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="51dp"
                android:background="@color/color_f5f5f5" />


            <TextView
                android:id="@+id/tv_more_mine"
                android:layout_width="131dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:drawableStart="@drawable/ic_more_mine"
                android:drawablePadding="21dp"
                android:gravity="center_vertical"
                android:text="个人中心"
                android:textColor="@color/color_3e"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</layout>
