<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:background="@drawable/rect_whilef6_solid_t4l4"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_register_delete"/>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="110dp"
            android:textColor="@color/color33"
            android:textSize="20sp"
            android:text="注册成功" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:textColor="@color/color33"
            android:textSize="14sp"
            android:text="是否马上立即进行车主认证？" />

        <View
            android:layout_marginTop="19dp"
            style="@style/divider" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="39dp"
                android:paddingRight="39dp"
                android:text="取消"
                android:textColor="@color/color99"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_vertify"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingRight="39dp"
                android:paddingLeft="39dp"
                android:layout_alignParentRight="true"
                android:text="立即认证"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />
        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="48dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/pic_login_right"/>
</RelativeLayout>